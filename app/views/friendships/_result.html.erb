<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <h4>Search Results</h4>
    <table class="col-md-12">
      <thead>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td><%= link_to "View Profile", '#',  class: "btn btn-sm btn-success" %></td>

            <td>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
                <% else %>
                <span class="badge badge-secondary">You are already friends ðŸ˜Š</span>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

